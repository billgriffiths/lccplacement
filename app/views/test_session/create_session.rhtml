<div id="banner">
	<div id="title">
  <%= @page_title || "Mathematics Placement Exams" %>
	</div>
</div>
<div id="logo">
    <%= image_tag("in-logo.gif", :width => 162) %>
</div>
<div id="main">

<h1>Testing Session</h1>

<%= error_messages_for 'test_session' %>

<% if flash[:notice] -%>
  <div id="notice"><%= flash[:notice] %></div>
<% end -%>

<% for column in Student.content_columns %>
<p>
  <b><%= column.human_name %>:</b> <%=h @student.send(column.name) %>
</p>
<% end %>

<% form_tag :action => 'authorize_testing_session', :student => @student do %>
<table>
	<tr><th>Choose Sequence</th></tr>
	<% thesequences = TestSequence.find(:all, :order => 'list_position') %>
	<%= render(:partial => "thesequence", :collection => thesequences) -%>
</table>

  <%= submit_tag 'Continue' %> 
<% end %>

</div>
