<h1>Scores by Date</h1>

<div class="user-form">
	<%= error_messages_for 'test_results' %>
	
	<fieldset>
		<legend>Enter Dates for Test Scores</legend>
		<% form_tag :action => 'get_test_records_by_date' do %>
		<p>
			<label for="start_date">Starting Date:</label>
			<%= select_date(Date.today,:prefix => "start_date",:order => [:month, :day, :year]) %>
		</p>
		<p>
			<label for="end_date">Ending Date:</label>
			<%= select_date(Date.today,:prefix => "end_date",:order => [:month, :day, :year]) %>
		</p>
		<p>
			<label> Location:</label>
			<% test_sessions =  TestSession.find( :all, :select => 'DISTINCT location' ) %>
			<%= collection_select("TestSession", "location" , test_sessions, :location, "location",{:include_blank => true})  %>
		</p>
		<%= submit_tag "Get Scores", :class => "submit" %>
		<% end %>
	</fieldset>
	<span class="advice">
		Leave Location blank to get a list for all locations
	</span>
</div>
