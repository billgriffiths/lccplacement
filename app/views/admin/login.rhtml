<div class="user-form">
	<fieldset>
		<legend>Please Log In</legend>
		<% form_tag do %>
		<p>
			<label for="name">Name:</label>
			<%= text_field_tag :user_name, params[:user_name] %>
		</p>
		<p>
			<label for="password">Password:</label>
			<%= password_field_tag :password, params[:password] %>
		</p>
		<%= submit_tag "Login" %>
		<% end %>
	</fieldset>
</div>